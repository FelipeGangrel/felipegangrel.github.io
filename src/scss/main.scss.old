// breakpoint-sass
@import '~breakpoint-sass/stylesheets/breakpoint';

// colors

$max-sm: (max-width: 800px);

$petrol: #282C34;
$white: #FFFFFF;
$ice: #FAFAFA;
$gray-100: #ABB2BF;
$gray-200: #878585;

$editor-background-color: $petrol;
$editor-color: $gray-100;

$navigator-background-color: lighten($editor-background-color, 5%);
$navigator-color: $ice;

// fonts
$source-code-pro: 'Source Code Pro', monospace;
$roboto: 'Roboto', sans-serif;

html, body {
    background-color: $editor-background-color;
    color: $editor-color;
    font-family: $roboto;
    font-size: 16px;
    margin: 0;
    padding: 0;
}

div#navigator {
    grid-area: navigator;
    grid-row-start: row-1-start;
    grid-row-end: row-2-end;
    background-color: $navigator-background-color;
    color: $navigator-color;
    z-index: 2;
    header {
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: relative;
        span {
            color: darken($navigator-color, 30%);
        }
        span.menu {
            position: absolute;
            left: 20px;
            cursor: pointer;
        }
    }
    div {
        padding: 5px 20px;
        cursor: pointer;
        &:hover {
            background-color: lighten($navigator-background-color, 2%);
        }
        &.active {
            background-color: lighten($navigator-background-color, 5%);
        }
    }
}

div#tabs {
    grid-area: tabs;
    grid-row-start: row-1-start;
    grid-row-end: row-1-end;
    background-color: darken($editor-background-color, 5%);
    display: flex;
    flex-direction: row;
    align-content: center;
    color: darken($editor-color, 20%);
    > div {
        display: flex;
        align-items: center;
        padding: 0 20px 0 40px;
        background-color: darken($editor-background-color, 5%);
        cursor: pointer;
        span.close {
            float: right;
            margin-left: 20px;
            font-size: 1.5em;
            opacity: 0;
            color: $white;  
        }
        &:hover, &.active {
            span.close {
                opacity: 1;
            }
        }
        &:hover {
            background-color: darken($editor-background-color, 2%);
        }
        &.active {
            background-color: $editor-background-color;
            color: $editor-color;
        }
        
    }
}

div#editor {
    grid-area: editor;
    grid-row-start: row-2-start;
    grid-row-end: row-2-end;
    padding: 40px;
    font-family: $source-code-pro;
}

main#app {
    display: grid;
    min-height: 100vh;
    grid-template-columns: [col-1-start] 340px [col-1-end col-2-start] auto [col-2-end];
    grid-template-rows: [row-1-start] 60px [row-1-end row-2-start] auto [row-2-end];
    grid-template-areas: 
        "nagigator tabs"
        "navigator editor";
}

main#app.menuToggle {
    grid-template-columns: [col-1-start] 60px [col-1-end col-2-start] auto [col-2-end];

    div#navigator {
        
    }
}


@include breakpoint($max-sm) {
    main#app {
        display: grid;
        min-height: 100vh;
        grid-template-columns: [col-1-start] auto [col-1-end];
        grid-template-rows: [row-1-start] 120px [row-1-end row-2-start] 60px [row-2-end row-3-start] auto [row-3-end];
        grid-template-areas: 
            "navigator"
            "tabs"
            "editor";
    }

    div#navigator {
        grid-row-start: row-1-start;
        grid-row-end: row-1-end;
        z-index: 1;
    }

    div#tabs {
        grid-row-start: row-2-start;
        grid-row-end: row-2-end;
    }

    div#editor {
        grid-row-start: row-3-start;
        grid-row-end: row-3-end;
    }


}